<div>
  <h1>Vivez un moment inoubliable !</h1>
</div>

<div class="lists-car">
  <ul>
    <% @cars.each do |car| %>
      <h1><%= car.brand %></h1>
      <h2><%= car.model %></h2>
      <h3><%= car.price %> €</h3>
      <%= image_tag car.car_image, width: 400%>
      <p><%= link_to "Réserver", car_path(car), class:"button-validation" %></p>
      <br>
      <br>
    <% end %>
  </ul>
</div>
